<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextCoursesInstructed"
        android:layout_width="384dp"
        android:layout_height="133dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginLeft="146dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="147dp"
        android:layout_marginRight="147dp"
        android:text="Courses Instructed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextStudentList"
        android:layout_width="370dp"
        android:layout_height="245dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Student List"
        app:layout_constraintEnd_toEndOf="@+id/editTextStudentList"
        app:layout_constraintStart_toStartOf="@+id/editTextStudentList"
        app:layout_constraintTop_toBottomOf="@+id/editTextCoursesInstructed" />

    <Button
        android:id="@+id/buttonFindStudents"
        android:layout_width="110dp"
        android:layout_height="97dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="88dp"
        android:text="Find Student List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextQueryCourseId"
        android:layout_width="216dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="177dp"
        android:layout_marginRight="177dp"
        android:ems="10"
        android:hint="CourseId"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextQuerySectionId"
        app:layout_constraintTop_toBottomOf="@+id/editTextStudentList" />

    <EditText
        android:id="@+id/editTextQuerySectionId"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="SectionId"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/editTextQuerySemester"
        app:layout_constraintTop_toBottomOf="@+id/editTextQueryCourseId" />

    <EditText
        android:id="@+id/editTextQuerySemester"
        android:layout_width="218dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Semester"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/editTextQueryYear"
        app:layout_constraintTop_toBottomOf="@+id/editTextQuerySectionId" />

    <EditText
        android:id="@+id/editTextQueryYear"
        android:layout_width="216dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextQuerySemester" />

</androidx.constraintlayout.widget.ConstraintLayout>